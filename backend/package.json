{
  "name": "hrms-backend",
  "version": "1.0.0",
  "description": "HRMS Backend API",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "migrate": "node run-migration.js up",
    "migrate:down": "node run-migration.js down",
    "migrate:smart-calendar": "node run-smart-calendar-migration.js",
    "migrate:notifications": "node run-notifications-migration.js",
    "migrate:notifications:down": "node run-notifications-migration.js down",
