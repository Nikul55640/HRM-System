    "cleanup:holiday-table": "node cleanup-holiday-table.js",
    "db:sync": "node sync-database.js",
    "db:sync:force": "node sync-database.js --force",
    "seed": "node seeds/quick-seed.js",
    "seed:full": "node seeds/hrm-restructured-seed.js",
    "seed:old": "node seeds/mysql-seed.js",
    "setup": "npm run migrate && npm run seed",
    "reset": "npm run db:sync:force",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
