# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hrms

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Server Configuration
PORT=4001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5174

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@hrms.com
EMAIL_FROM_NAME=HRM System

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png

# Document Encryption
DOCUMENT_ENCRYPTION_KEY=your-32-char-encryption-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
BCRYPT_ROUNDS=12

# Application
APP_NAME=HRM System
APP_URL=http://localhost:5174
API_URL=http://localhost:4001

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
