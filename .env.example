# ==============================================
# HRM System Docker Environment Configuration
# ==============================================

# Build Configuration
NODE_ENV=production
BUILD_TARGET=production

# Database Configuration (MySQL)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=hrm2
DB_USER=hrm_user
DB_PASSWORD=secure_password_here
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5

# Backend Configuration
BACKEND_PORT=5000

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=http://localhost:5000/api

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration
EMAIL_PROVIDER=MAILTRAP
EMAIL_FROM=HRM System <noreply@yourcompany.com>
FRONTEND_URL=http://localhost:5173

# Mailtrap Configuration (for testing/staging)
MAILTRAP_API_TOKEN=your_mailtrap_api_token_here

# Resend Configuration (alternative email provider)
RESEND_API_KEY=your_resend_api_key_here

# External API Keys
CALENDARIFIC_API_KEY=your_calendarific_api_key_here

# Security Configuration
DOCUMENT_ENCRYPTION_KEY=hrms-doc-encrypt-key-2025-secure-32-chars-min
AUDIT_LOG_RETENTION_YEARS=7

# Redis Configuration (Optional - uncomment if using Redis)
# REDIS_PASSWORD=redis_secure_password_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100