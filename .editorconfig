# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Windows-style line endings for all files
[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Indentation for JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Indentation for JSON files
[*.json]
indent_style = space
indent_size = 2

# Indentation for CSS/SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# Indentation for HTML files
[*.html]
indent_style = space
indent_size = 2

# Indentation for Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Indentation for YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
